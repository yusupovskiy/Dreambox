<%= form_with(model: company, local: true) do |f| %>
  <div class="panel-list" style="background-color: whitesmoke;">
    <div style='position: relative;'>
      <h2 class="panel-form__title" style="margin-top: 10px;">Добавление компании</h2>
      <% 
        if request.referrer == request.original_url or request.referrer == nil
          url = clients_path
        else
          url = request.referrer
        end
      %>

      <a href="<%= url %>" class="btn-back new-btn">
        <ion-icon name="arrow-back" role="img" class="hydrated" aria-label="arrow back"></ion-icon>
      </a>
      <%= f.submit 'Сохранить', class: "btn", style: 'float: right; position: absolute; right: 10px; top: 0; padding: 15px; color: #12ce88;' %>
    </div>
    <div class="container-list gray-scrollbar">  
      <div class="cont-category-book">
        <div class="tab-category information-section">
          <% if company.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(company.errors.count, "error") %> prohibited this company from being saved:</h2>

              <ul>
              <% company.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
              </ul>
            </div>
          <% end %>

          <div class="block-information">

            <div class="finput">
              <%= f.label 'Название*', class: 'finput-label' %>
              <%= f.text_field :name, id: :company_name, class: 'finput-input', required: 'required' %>
            </div>
            <div class="finput">
              <%= f.label 'Адрес*', class: 'finput-label' %>
              <%= f.text_field :address, class: 'finput-input', required: 'required' %>
            </div>
          </div>

        </div>
      </div>
    </div>
  </div>
<% end %>