<h1>Companies</h1>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>User ID</th>
      <th>Affiliates</th>
      <th>Clients</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @companies.each do |company| %>
      <tr>
        <td><%= company.id %></td>
        <td><%= company.name %></td>
        <td><%= company.user_id %></td>
        <td><%= link_to 'Affiliates', company_affiliates_path(company)%></td>
        <td><%= link_to 'Clients', company_clients_path(company)%></td>
        <td>[CRM]<%#= link_to 'CRM (experimental)', company_crm_path(company)%></td>
        <td><%= link_to 'Show', company %></td>
      </tr>
    <% end %>
  </tbody>
</table>

