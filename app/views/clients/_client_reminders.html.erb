    },
    methods: {
      clickActive(id) {
        let {client} = vmClient;

        if(this.activeId != id)
          this.activeId = id;

        else if(this.activeId != null)
          this.activeId = null;

        else 
          this.activeId = id;
      },

      completedReminder(reminder, index) {
        let complited = false;

        if(!this.loading) {
          this.loading = true;

          setTimeout(() => {
            $.ajax('/reminders/' + reminder.id + '/update_completed.json', {
              method: 'POST',
              data: {
                authenticity_token: authToken,
                completed: !reminder.completed,
              },
              success: messege => {
                complited = messege.complited;
                newLog = messege.log;
                vmNotifications.notifications.unshift(messege);
              },
              error: e => console.warn('error', e)
            }).done(e => {
              if(complited) {
                let index = vmClient.reminders.findIndex(r => r.id === reminder.id);
                vmClient.reminders[index].completed = !reminder.completed;

                vmClient.logs.unshift(newLog);

                if(parseInt(reminder.debt) > 0) {
                  if(!reminder.completed) {
                    vmClient.client.unpaid_debt_subs = vmClient.client.unpaid_debt_subs + reminder.debt;
                  }
                  else if(reminder.completed) {
                    vmClient.client.unpaid_debt_subs = vmClient.client.unpaid_debt_subs - reminder.debt;
                  }
                }
              }
              this.loading = false;
            });
          }, 600);
        }
      },
    },
    watch: {
    },
    computed: {
      remindersClient() {
        let {reminders, client} = vmClient;

        return reminders.filter(r => {
