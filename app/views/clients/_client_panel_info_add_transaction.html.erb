                <option value="expense">Расход</option>
              </select>

              <div v-if="addTransForSubs != ''">
                <select v-if="addTransForSubs != 'income' && addTransForSubs != 'expense'" v-model="category_id">
                  <option disabled value="">Выберите услугу</option>
                  <option v-for="category in categoriesRecordService" :value="category.id">
                    Сумма в записи {{ category.money_for_abon | money }} ₽ | {{ category.name }}
                  </option>
                </select>

                <select v-if="addTransForSubs == 'income'" v-model="category_id">
                  <option disabled value="">Выберите одну из статей дохода</option>
                  <option v-for="category in categoriesIncome" :value="category.id">
                    {{ category.name }}
                  </option>
                </select>

                <select v-else-if="addTransForSubs == 'expense'" v-model="category_id">
                  <option disabled value="">Выберите одну из статей расхода</option>
                  <option v-for="category in categoriesExpense" :value="category.id">
                    {{ category.name }}
                  </option>
                </select>

                <select v-if="affiliates.length > 1 && (addTransForSubs == 'income' || addTransForSubs == 'expense')" v-model="affiliate_id">
                  <option disabled value="">Выберите филиал</option>
                  <option v-for="affiliate in affiliates" :value="affiliate.id">
                    {{ affiliate.address }}
                  </option>
