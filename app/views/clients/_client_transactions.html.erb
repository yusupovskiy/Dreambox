  Vue.component('section-client-transactions', {
    data: function () {
      return {
        loading: false,
        showAll: false,
        transactionCreateLoading: false,
        note: '',

        showNoteCancel: false,
      }
    },
    props: {
    },
    methods: {
      showPanelAdd(panel) {
        vmPanelsAdd.panelAddCategory = panel;
        vmPanelsAdd.person = vmClient.client;
        vmPanelsAdd.unpaidSubscriptionClient = '';      
      },
      indentAmount(amount) {
        return amount.toLocaleString();
      },
      date(date) {
        return dateInWords(date, false);
      },
      clickTransactionClientActive(id) {
        let {client} = vmClient;

        if(!$('.transaction-'+id).hasClass('active')) {
          $('.transaction-'+id).parents().children().removeClass('active');
          $('.transaction-'+id).addClass('active');
        }
        else {
          $('.transaction-'+id).parents().children().removeClass('active');
          this.note = '';
        }
      },
      cancelTransactionClient(transaction) {
        let { client } = vmClient;
        let { transactions } = data;
        let { note } = this;
        var complited = false;

        if(!this.transactionCreateLoading) {
          this.transactionCreateLoading = true;

          setTimeout(() => {
            $.ajax('/cancel_transaction.json', {
              method: 'DELETE',
              data: {
                authenticity_token: authToken,
                id: transaction.id,
                note: note,
              },
              success: messege => {
                complited = messege.complited;
                vmNotifications.notifications.unshift(messege);
              },
              error: e => console.warn('error', e)
            }).done(e => {
              if(complited) {

                let indexTransactions = transactions
                  .findIndex(t => t.id == transaction.id);
                transactions.splice(indexTransactions, 1);
                this.note = '';

                this.showNoteCancel = false;
              }
              this.transactionCreateLoading = false;
            });
          }, 600);
        }
      },
    },
    watch: {
      "showNoteCancel" : function() {
        this.note = '';
      }
    },
    computed: {
      transactionsClient() {
        let { operations, client } = vmClient;
        let { transactions } = data;

        return transactions.filter(t => {
          if(t.is_active) {
            let operations_client = operations.filter( o => o.client_id === client.id );
            let operations_transactions = operations_client.find( o => o.id == t.operation_id );

            if(operations_transactions != undefined) {
              return t;
            }
          }
        });
      },
      transactionsSort() {
        const k = 'date';
        const reverse = true;
        return this.transactionsClient.sort((a, b) => (a[k] < b[k] ? -1 : a[k] > b[k] ? 1 : 0) * [1, -1][+reverse]);
      },
    },
