            <% affiliate_work.each do |a| %>
              <% affiliate_work_salary = WorkSalary.find_by(affiliate_id: a.id, work_id: w.id) %>
              <li>
                <span><%= a.address %> <%= link_to 'удалить', works_salary_path(affiliate_work_salary.id), method: :delete, data: { confirm: 'Точно хотите ограничить доступ?' }, class: "link-delete link-to" %></span>
