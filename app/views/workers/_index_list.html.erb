<div v-if="!loadComplete" class="loading">
  <img src="images/loading.gif" />
</div>

<div v-else-if="loadComplete && workers.length > 0" id='main-list' class="container-list cool-scrollbar">
  <ul v-if="workersSearch.length > 0" class="list">
    <li @click="clickWorker(workerItem)" v-for="workerItem in workersSearch" class="item-list" :key="workerItem.id" :class="['worker-' + workerItem.id, worker.id != workerItem.id ? '' : 'active' ]" :title='workerItem.full_name'>

      <img class="avatar-listt" src="/resources/no-image-available.png">
      <div class="left-content">
        <div class="center-left-content">
          <div class="name-content">{{ workerItem.full_name }}</div>
          <span class="desc-content">{{ workerItem.position_work }}</span>
        </div>
      </div>
      <div class="right-content">
      </div>

    </li>
  </ul>
  <div v-else class="loading">
    <div>
      <img src="images/crying.png" style="width: 40px; margin: auto; margin-bottom: 10px;" />
      <div>Ничего не найдено</div>
    </div>
  </div>

</div>
<div v-else-if="loadComplete && (workers.length == 0)" class="loading" style="z-index: 10;">
  <div style="top: 85px;">
    <div>В компании пока нет клиентов</div>
    <a href="/clients/new" style="    color: #3880ff;
    margin: 20px auto;
    float: unset;    display: table;" class="btn show-panel"><div>+Добавить клиента</div></a>
  </div>
</div>